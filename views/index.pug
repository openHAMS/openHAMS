doctype
html
    head
        title openHAMS
        link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/css/materialize.min.css')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        link(rel='stylesheet', type='text/css', href='/static/css/style.css')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    body
        .container
            h1.blue-text openHAMS
            status#connbull ●
            status#conntext
        .container
            .row
                .col.s12.m6.l4
                    .card
                        .card-image
                            #container.chart
                            a.btn-floating.halfway-fab.waves-effect.waves-light.blue.modal-trigger(href='#modal1')
                                i.material-icons add
                        .card-content.grey-text.text-darken-3
                            span.card-title.grey-text Barometer
                            table.striped.grey-text.text-darken-1
                                tbody
                                    tr
                                        td temperature:
                                        td.right-align
                                            data#temp.grey-text.text-darken-2
                                        td ℃
                                    tr
                                        td pressure:
                                        td.right-align
                                            data#atm.grey-text.text-darken-2
                                        td hPa
        #modal1.modal
            .modal-content
                h4 Modal Header
                p A bunch of text
            .modal-footer
        // jQuery
        script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
        // highstock
        script(type='text/javascript', src='https://code.highcharts.com/stock/highstock.js')
        // materializeCSS
        script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/js/materialize.min.js')
        // socket.io
        script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.min.js', integrity='sha256-WKvqiY0jZHWQZIohYEmr9KUC5rEaYEOFTq+ByllJK8w=', crossorigin='anonymous')
        // fallback if cdn is kill
        script(type='text/javascript', src='/static/js/fallback.js')
        // custom
        script(type='text/javascript', src='/static/js/chartSettings.js')
        script(type='text/javascript', src='/static/js/chart.js')
        // <script type="text/javascript" src="/static/js/connectionStatus.js"></script>
        // <script type="text/javascript" src="/static/js/led.js"></script>
        script(type='text/javascript', src='/static/js/index.js')
